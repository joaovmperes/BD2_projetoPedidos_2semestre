/*BD2 - 2o Bim -Atividade de SQL - Exercícios de DD - Acessando e extraindo metadados*/

--1

SELECT TABLE_NAME AS TABELA FROM USER_TABLES
ORDER BY TABLE_NAME ASC;

--2

SELECT TABLE_NAME AS TABELA, COLUMN_NAME AS COLUNA, DATA_TYPE AS TIPO_DADO, DATA_LENGTH AS TAMANHO_COLUNA  FROM USER_TAB_COLUMNS
ORDER BY TABLE_NAME ASC, COLUMN_NAME DESC; 

--3

SELECT OWNER AS DONO, CONSTRAINT_NAME AS CONSTRAINT, CONSTRAINT_TYPE AS TIPO, SEARCH_CONDITION AS REGRA FROM USER_CONSTRAINTS
ORDER BY CONSTRAINT DESC, TIPO;

--4

SELECT OWNER AS DONO, CONSTRAINT_NAME AS CONSTRAINT, TABLE_NAME AS TABELA, COLUMN_NAME AS COLUNA, POSITION AS POSICAO FROM USER_CONS_COLUMNS
ORDER BY CONSTRAINT ASC, COLUNA ASC;

