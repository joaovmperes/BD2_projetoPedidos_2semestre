/*BD2 - 2o Bim -Atividade de SQL - Exercícios de DML - Select - Queries médias - Join - 1*/

--A

SELECT MATRICULA, NOME FROM VENDEDOR
ORDER BY NOME DESC;

--B

SELECT  NOME, CNPJ, CIDADE FROM CLIENTE A INNER JOIN PJ B ON A.CODIGO= B.CODIGO_CLI
ORDER BY NOME ASC, CIDADE DESC;

--C
SELECT A.NOME AS VENDEDOR, B.NUMERO AS PEDIDO, TO_CHAR(B.DATA, 'dd/mm/yyyy') AS DATA  FROM VENDEDOR A INNER JOIN PEDIDO B ON A.MATRICULA = B.MATRICULA_VEN
WHERE TOTAL_FATURA>=1000 AND TOTAL_FATURA <=5000
ORDER  BY VENDEDOR DESC, DATA ASC ;

